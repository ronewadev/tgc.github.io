rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Jobs collection - public read, admin write
    match /jobs/{jobId} {
      allow read;
      allow write: if request.auth != null && request.auth.token.admin == true;
    }
    
    // Programs collection - public read, admin write
    match /programs/{programId} {
      allow read;
      allow write: if request.auth != null && request.auth.token.admin == true;
    }
    
    // Events collection - public read, admin write
    match /events/{eventId} {
      allow read;
      allow write: if request.auth != null && request.auth.token.admin == true;
    }
    
    // Applications - limited access
    match /applications/{applicationId} {
      // Users can create applications
      allow create: if request.auth != null;
      
      // Only the applicant or admin can read their own applications
      allow read: if request.auth != null && 
                   (request.auth.uid == resource.data.userId || request.auth.token.admin == true);
      
      // Only admin can update status
      allow update: if request.auth != null && request.auth.token.admin == true;
      
      // No one can delete applications directly
      allow delete: if false;
    }
    
    // Program applications - similar rules to job applications
    match /program-applications/{applicationId} {
      allow create: if request.auth != null;
      allow read: if request.auth != null && 
                   (request.auth.uid == resource.data.userId || request.auth.token.admin == true);
      allow update: if request.auth != null && request.auth.token.admin == true;
      allow delete: if false;
    }
  }
}
